@model lab5.Models.UtilsViewModel

@{
    ViewData["Title"] = "Utils";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Utils" method="post">
        <div class="form-group">
            <label asp-for="N" class="control-label"></label>
            <input asp-for="N" class="form-control" />
            <span asp-validation-for="N" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="K" class="control-label"></label>
            <input asp-for="K" class="form-control" />
            <span asp-validation-for="K" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Розрахувати</button>
        </div>
    </form>

    @if (Model.Count.HasValue)
    {
        <h3>Результат: @Model.Count</h3>
    }

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
